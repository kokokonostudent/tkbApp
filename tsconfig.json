{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "sourceMap": true,
        "rootDir": ".",
        "strict": true,
        "jsx": "react",
        "baseUrl": "./",
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "jsx": "react-jsx",
        "strict": true,
        "paths": {
            "@/*": ["./*"]
        },
        "typeRoots": ["./node_modules/@types", "./types"]
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
